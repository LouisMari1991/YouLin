<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

  <include layout="@layout/layout_common_toolbar" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/gauge_88"
      android:layout_marginTop="@dimen/gauge_20"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/gauge_20"
      android:paddingRight="@dimen/gauge_20"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公司名称"
        style="@style/YunXunListItem_Title"
        />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <EditText
        android:id="@+id/et_company_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="right|center_vertical"
        android:hint="请输入公司名称"
        android:minWidth="150dp"
        android:textColor="@color/text_deep_light"
        android:textColorHint="@color/text_deep_light"
        android:textSize="@dimen/sp_15"
        />


  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/gauge_88"
      android:layout_marginTop="@dimen/gauge_1"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/gauge_20"
      android:paddingRight="@dimen/gauge_20"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="职务"
        style="@style/YunXunListItem_Title"
        />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />


    <EditText
        android:id="@+id/et_post"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="right|center_vertical"
        android:hint="请输入职务"
        android:minWidth="150dp"
        android:textColor="@color/text_deep_light"
        android:textColorHint="@color/text_deep_light"
        android:textSize="@dimen/sp_15"
        />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/gauge_88"
      android:layout_marginTop="@dimen/gauge_1"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/gauge_20"
      android:paddingRight="@dimen/gauge_20"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间段"
        style="@style/YunXunListItem_Title"
        />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />


    <TextView
        android:id="@+id/text_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择"
        android:textColor="@color/text_deep_light"
        android:textSize="@dimen/sp_15"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/gauge_10"
        android:gravity="center"
        android:layout_marginLeft="@dimen/gauge_10"
        android:text="至"
        android:textColor="@color/black_text"
        android:textSize="@dimen/sp_15"
        />

    <TextView
        android:id="@+id/text_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择"
        android:textColor="@color/text_deep_light"
        android:textSize="@dimen/sp_15"
        />
  </LinearLayout>


</LinearLayout>