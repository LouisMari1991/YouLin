<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/selector_subtle"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="树 . 熊"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_12"
        />
    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/text_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingBottom="5dp"
        android:paddingLeft="50dp"
        android:paddingTop="15dp"
        android:text="@string/str_vote"
        android:textColor="@drawable/selector_blue_text"
        android:textSize="@dimen/text_12"
        />
  </LinearLayout>


  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >

    <LinearLayout
        android:id="@+id/ll_progress"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@drawable/shape_gray_light_fillet"
        >

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:background="@drawable/shape_blue_fillet"
          >

        <View
            android:id="@+id/view_progress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />

      </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:text="0人"
        android:textColor="@color/text_deep_light"
        android:textSize="@dimen/text_10"
        />
  </RelativeLayout>
  <Space
      android:layout_width="match_parent"
      android:layout_height="15dp"
      />
</LinearLayout>



