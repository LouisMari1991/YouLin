<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <LinearLayout
      android:id="@+id/articl_comment"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:layout_alignParentBottom="true"
      android:background="@color/white"
      android:gravity="center_vertical"
      >
    <TextView
        android:id="@+id/et_comment"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="@drawable/shape_input_bg"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_pen"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="写评论..."
        android:textColor="@color/color_gray_deep"
        />
    <youlin.xinhua.com.youlin.widget.CheckableView
        android:id="@+id/iv_collet"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="15dp"
        app:checkedDrawable="@drawable/ic_collet_select"
        app:normalDrawable="@drawable/ic_collet_normal"
        />
    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_share"
        />
  </LinearLayout>

  <FrameLayout
      android:id="@+id/video_fullView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/black"
      android:visibility="gone"
      />

</RelativeLayout>