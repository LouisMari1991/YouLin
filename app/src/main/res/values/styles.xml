<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- 设置没有标题 -->
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
    <item name="android:button">@drawable/checkbox_bg_selector</item>
  </style>

  <!-- 用于开启滑动返回功能的 Activity -->
  <style name="AppTheme.Transparent">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsTranslucent">false</item>
  </style>

  <style name="AppTheme.Login" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- 设置没有标题 -->
    <item name="android:windowNoTitle">true</item>
    <!-- 设置activity切换动画 -->
    <item name="android:windowAnimationStyle">@style/login_animation</item>
    <item name="android:windowLightStatusBar">true</item>
  </style>

  <!--Activity跳转动画（设置为从左边退出，右边进入）-->
  <style mce_bogus="1" name="login_animation" parent="@android:style/Animation.Activity">
    <!-- A跳转到B进入动画-->
    <item name="android:activityOpenEnterAnimation">@anim/in_from_bottom</item>
    <!--A跳转到B退出动画 -->
    <item name="android:activityOpenExitAnimation">@anim/anim_no</item>
    <!--B跳转到A进入动画 -->
    <item name="android:activityCloseEnterAnimation">@anim/anim_no</item>
    <!--B跳转到A退出动画 -->
    <item name="android:activityCloseExitAnimation">@anim/out_to_bottom</item>
  </style>

  <style name="SwitchButtonStyle">
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:paddingTop">4dp</item>
    <item name="android:paddingBottom">4dp</item>
  </style>

  <style name="item_left_text">
    <item name="android:textSize">@dimen/sp_15</item>
    <item name="android:textColor">@color/black_text</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="item_comm_layout">
    <item name="android:layout_height">44dp</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:layout_width">match_parent</item>
  </style>

  <style name="item_comm_divider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/gauge_1</item>
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:layout_marginRight">10dp</item>
    <item name="android:background">@color/color_gray_light</item>
  </style>

  <!--popWindoes位移动画-->
  <style name="popAnimtion">
    <item name="android:windowEnterAnimation">@anim/pop_enter</item>
    <item name="android:windowExitAnimation">@anim/pop_exit</item>
  </style>

  <style name="MyProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
    <item name="android:indeterminateTint">@color/white</item>
    <item name="android:indeterminateTintMode">src_atop</item>
  </style>

  <style name="YunXunListItem_Title">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/sp_15</item>
    <item name="android:textColor">@color/black_text</item>
  </style>

  <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?attr/actionBarSize</item>
    <item name="android:background">?attr/colorPrimary</item>
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
  </style>




</resources>
