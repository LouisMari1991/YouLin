<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- 设置没有标题 -->
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
    <item name="android:button">@drawable/checkbox_bg_selector</item>
  </style>

  <style name="SwitchButtonStyle">
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:paddingTop">4dp</item>
    <item name="android:paddingBottom">4dp</item>
  </style>

  <style name="item_left_text">
    <item name="android:textSize">@dimen/text_15</item>
    <item name="android:textColor">@color/black_text</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="item_comm_layout">
    <item name="android:layout_height">44dp</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:layout_width">match_parent</item>
  </style>

  <style name="item_comm_divider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/gauge_1</item>
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:layout_marginRight">10dp</item>
    <item name="android:background">@color/color_gray_light</item>
  </style>

  <!--popWindoes位移动画-->
  <style name="popAnimtion">
    <item name="android:windowEnterAnimation">@anim/pop_enter</item>
    <item name="android:windowExitAnimation">@anim/pop_exit</item>
  </style>

</resources>
